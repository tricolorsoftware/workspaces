{
    "name": "@tcsw/workspaces",
    "type": "module",
    "version": "0.0.0",
    "workspaces": [
        "instance/",
        "instance/src/web/",
        "applications/*/web/",
        "applications/*/backend/",
        "uikit-solid/"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tricolorsoftware/workspaces"
    },
    "scripts": {
        "backend": "bun --watch instance/src/index.ts",
        "web": "bun run --cwd instance/src/web dev",
        "uikit": "bun run --cwd uikit-solid dev"
    },
    "private": true,
    "dependencies": {
        "@typescript/native-preview": "^7.0.0-dev.20250814.1",
        "prettier": "^3.6.2"
    }
}
